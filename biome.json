{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"indentStyle": "tab",
		"indentWidth": 2
	},
	"javascript": {
		"globals": ["Astro"],
		"formatter": {
			"bracketSpacing": true,
			"semicolons": "always",
			"trailingCommas": "all",
			"indentStyle": "tab",
			"indentWidth": 2
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"json": {
		"formatter": {
			"trailingCommas": "none"
		}
	}
}
